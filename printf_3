int	ft_printf(const char * restrict format, ...)
{
	char *traverse;
	unsigned int i;
	char *s;

	va_list arg;
	va_start(arg, format);
	traverse = format;
	while (*traverse != '\0')
	{
		while (*traverse != '%')
		{
			ft_putchar(*traverse);
			(*traverse)++;
		}
		if (*traverse == '%')
		{
			(*traverse)++;
			if (*traverse == 'c')
			{
				i = va_arg(arg, int);
				ft_putchar(i);
//			break;
//			exit ;
			}
			if (*traverse == 'd' || *traverse == 'i')
			{
				i = va_arg(arg, int);
				if (i < 0)
				{
					i = -i;
					ft_putchar('-');
				}
				ft_putnbr(i);
//			exit (0);
			}
		}
		(*traverse)++;
	}
	va_end(arg);
	return (0);
}

int main()
{
	char a = 'p';
	int b = 1234;
	ft_printf("%c %d", a, b);
	printf("%c %d", a, b);
//	ft_printf("%d", b);
	return (0);
}
